pipeline{

agent any

tools{
maven 'maven3.8.2'

}


// triggers{
// pollSCM('* * * * *')
// }

options{
timestamps()
buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5'))
}

parameters {
  choice choices: ['dev', 'preqa', 'qa', 'master'], description: 'Please select your env wisely', name: 'BranchName'
  string defaultValue: 'BFF', description: 'Give the project name', name: 'Prashanth'
}

stages{
  stage('CheckOutCode'){
    steps{
    git branch: "${params.BranchName}", credentialsId: 'github', url: 'https://github.com/prashanthkvarma/maven-web-application.git'
	
	}
  }
}
}